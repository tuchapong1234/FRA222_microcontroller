/* Private variables ---------------------------------------------------------*/
TIM_HandleTypeDef htim2;
TIM_HandleTypeDef htim3;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
struct Evaluation
{
	float Position;
	float Velocity;
}Setpoint,Measure;

int32_t e;
float e_Integral;
int32_t e_Derivative;

uint16_t Kp = 300;
uint16_t Ki = 10;
uint16_t Kd = 0;

int16_t duty_raw = 0;
uint16_t duty = 0;
int16_t dt = 0.01;

uint32_t T_prev = 0;
uint32_t T = 0;
int32_t dT = 0;
float P_prev = 0;
uint32_t timestamp = 0;

int32_t QEIReadRaw;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_TIM3_Init(void);
